{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "..",
        "paths": {
            "*": [
                "./node_modules/*",
                "./src/javascript/*"
            ]
        }
    },

    "include": [
        "./src/javascript/*"
    ],

    "exclude": [
        "node_modules"
    ],

    "types": [
        "chrome",
        "node"
    ]
}